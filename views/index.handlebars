<div class="container">

    <h1 class="">Greetings</h1>
    <div class="numberAndName">

        <div>
            <form action="/greetings" method="POST">
            <script>
                setTimeout(function(){
                    document.querySelector(".name").style.display = "none";},3000)
            </script>
              <script>
                setTimeout(function(){
                    document.querySelector(".red").style.display = "none";},3000)
            </script>

                {{#if greeting}} <p class="name">{{greeting}}</p>{{/if}}
                {{#if errors}} <p class="red">{{errors}}</p>{{/if}}

                <label>Name</label>
                <input type="text" class="textArea" id="key" placeholder="Please enter name" name="userName">

                <div class="radioButton">
                    {{!-- <form action="/" method="POST"> --}}
                        <label class="">
                            <input type="radio" name="radioLanguage" class="radioBtn" value="english">
                            <span class="label-body">English</span>
                        </label>
                        <label class="">
                            <input type="radio" name="radioLanguage" class="radioBtn" value="afrikaans">
                            <span class="label-body">Afrikaans</span>
                        </label>
                        <label class="">
                            <input type="radio" name="radioLanguage" class="radioBtn" value="xhosa">
                            <span class="label-body">isiXhosa</span>
                        </label>
                        <br>

                        <button class="greetBtn" type="submit">Greet me</button>

                        {{!--
                    </form> --}}

                </div>

                <div class="number">
                    <h5>Name Counter: <span class="counter numberCounter">{{count}}</span></h5>
                </div>
            </div>
        </form>
        <div>
            <a href="/greeted">Names greeted</a>
            {{!-- href="/actions" --}}
        </div>
    </div>

    <div>
<br>

    </div>
    <div>
        <form action="/reset" method="POST">
            <script>
                setTimeout(function(){
                    document.querySelector(".green").style.display = "none";},3000)
            </script>
            {{#if reset}}<p class="green">{{reset}}</p>{{/if}}
            <button class="resetBtn" type="submit">Reset</button>
        </form>

    </div>
</div>